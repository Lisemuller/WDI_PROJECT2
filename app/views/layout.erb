<!DOCTYPE html>
<html>
<head>
  <title></title>
  <%= css :application %>
  <%= js :application %>
</head>
<body>
  <header>
    <div>
        <div class="header">
            <div class="pure-menu pure-menu-horizontal">
                <a class="pure-menu-heading" href="">Photo Gallery</a>

                <ul class="pure-menu-list">
                    <li class="pure-menu-item"><a href="/users" class="pure-menu-link">Users</a></li>
                    <% if is_logged_in? %>
                      <li class="pure-menu-item"><a href="/users/<%=current_user.id %>/edit" class="pure-menu-link"><%= @current_user.username %></a></li>
                      <li class="pure-menu-item"><a href="/logout" class="pure-menu-link">Logout</a></li>
                    <% else %>
                      <li class="pure-menu-item"><a href="/login" class="pure-menu-link">Login</a></li>
                    <% end %>
                </ul>
            </div>
        </div>
    </div>
  </header>
  <main>
    <%= yield %>
  </main>
</body>
</html>          