

<!--   <div class=”row”> -->
    <div class="pure-g">
          <div class="pure-u-1-6"> 
            <a style="display:block" href="/folders/new">
              <div class="thumbnailnew">
              </div>
              </a>
            </div>
            <% if @user.folders.count > 0 %>
             <% @user.folders.each do |folder| %>
              <div class="pure-u-1-6"> 
                 <div class="thumbnail">
                 <div class="colorstyle" style="background-color:<%= colors[folder.id%15] %>"></div>
                  <span><a href="/folders/<%= folder.id %>"><%= folder.title %></a></span>
                    <form method="post" action="/folders/<%= folder.id %>/add_friend">
                      <h2> Share </h2>
                        <div class="friend">
                          <select name="user_id" id="friend">
                            <% @allUsers.each do |user| %>
                              <option value="<%=user.id%>"><%= user.username %></option>
                            <% end %>
                          </select>
                        </div>
                         <input type="submit" value="send">
                      </form>
                     </div>
                  </div>
                <% end %>
              <% end %>
      </div>
